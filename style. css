/* --- Animation definitions --- */
/* main slide animation: move fully across (start at 100% to -120% so it fully exits) */
@keyframes slide-right-to-left {
  0% { transform: translateX(100%); opacity:0.98; }
  8% { opacity:1; }
  45% { transform: translateX(-10%); opacity:0.98; } /* near center behind candle */
  85% { transform: translateX(-120%); opacity:0.95; }
  100% { transform: translateX(-120%); opacity:0; }
}

/* apply staggered animation durations/delays for each line */
.poem-line { animation-name: slide-right-to-left; animation-duration: 12s; animation-timing-function: linear; animation-iteration-count: infinite; }

/* Stagger delays so lines follow each other */
.line-1 { animation-delay: 0s; }
.line-2 { animation-delay: 2s; }
.line-3 { animation-delay: 4s; }
.line-4 { animation-delay: 6s; }
.line-5 { animation-delay: 8s; }
.line-6 { animation-delay: 10s; }

/* Slight size differences for depth illusion */
.line-1{font-size:1.9rem}
.line-2{font-size:1.6rem}
.line-3{font-size:1.7rem}
.line-4{font-size:1.5rem}
.line-5{font-size:1.4rem}
.line-6{font-size:1.3rem}
