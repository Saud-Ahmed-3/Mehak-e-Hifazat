  <script>
    const lines = document.querySelectorAll('.poetry-line');
    let index = 0;

    function showPoetry() {
      lines.forEach(l => l.style.opacity = 0);
      lines[index].style.opacity = 1;
      lines[index].style.animation = 'slideAcross 10s linear';
      index = (index + 1) % lines.length;
    }
    showPoetry();
    setInterval(showPoetry, 7000);
  </script>

